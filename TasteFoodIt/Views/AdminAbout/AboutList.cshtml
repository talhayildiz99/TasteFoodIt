@model List<TasteFoodIt.Entities.About>
@{
    ViewBag.Title = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewBag.name Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">@ViewBag.name</li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.name İşlemleri</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">@ViewBag.name</h6>
                </div>
                @if (Model.Count == 0)
                {
                    <div class="card-body">
                        <div class="alert alert-info" role="alert">
                            <h4 class="alert-heading">Hakkımda kısmında bir veri bulunmamaktadır!</h4>
                        </div>
                        <a href="/AdminAbout/CreateAbout/" class="btn btn-primary">Hakkımda Kısmına veri ekle</a>
                    </div>
                }
                else
                {
                    <div class="card mb-4">
                        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h6 class="m-0 font-weight-bold text-primary">Uyarı</h6>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-info alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <h6><i class="fas fa-info"></i><b> Dikkat !</b></h6>
                                Hakkımda Kısmı Tek Veriden Oluşmalıdır!
                            </div>                            
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th>*</th>
                                    <th>Hakkımda Başlığı</th>
                                    <th>Hakkımda Açıklaması</th>
                                    <th>Fotoğraf</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><a href="#">@item.AboutId</a></td>
                                        <td>@item.Title</td>
                                        <td>@item.Description.Substring(0, 250)...</td>
                                        <td>
                                            <img src="@item.ImageUrl" alt="@item.ImageUrl" class="img-thumbnail">
                                        </td>
                                        <td>
                                            <a href="/AdminAbout/DeleteAbout/@item.AboutId" class="btn btn-danger btn-icon-split">
                                                <span class="icon text-white-50">
                                                    <i class="fas fa-trash"></i>
                                                </span>
                                                <span class="text">Sil</span>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/AdminAbout/UpdateAbout/@item.AboutId" class="btn btn-success btn-icon-split">
                                                <span class="icon text-white-50">
                                                    <i class="fas fa-check"></i>
                                                </span>
                                                <span class="text">Güncelle</span>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <td><a href="/AdminAbout/CreateAbout/" class="btn btn-sm btn-primary">Yeni Hakkımda Girişi</a></td>
                    </div>
                }
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
</div>

