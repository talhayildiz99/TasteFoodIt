@model List<TasteFoodIt.Entities.Chef>
@{
    ViewBag.Title = "ChefList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Şefler Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">Şefler</li>
            <li class="breadcrumb-item active" aria-current="page">Şefler İşlemleri</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Şefler</h6>
                </div>
                @if (Model.Count == 0)
                {
                    <div class="card-body">
                        <div class="alert alert-info" role="alert">
                            <h4 class="alert-heading">Şefler kısmında bir veri bulunmamaktadır!</h4>
                        </div>
                        <a href="/AdminChef/CreateChef/" class="btn btn-primary">Şefler Kısmına veri ekle</a>
                    </div>
                }
                else
                {
                    <div class="card mb-4">
                        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h6 class="m-0 font-weight-bold text-primary">Uyarı</h6>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-info alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <h6><i class="fas fa-info"></i><b> Dikkat !</b></h6>
                                Şefler Kısmı En Fazla 4 Veriden Oluşmalıdır!
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th>*</th>
                                    <th>İsim Soyisim</th>
                                    <th>Ünvan</th>
                                    <th>Açıklama</th>
                                    <th>Resim</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><a href="#">@item.ChefId</a></td>
                                        <td>@item.NameSurname</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td><img src="@item.ImageUrl" style="height:50px;width:50px;" class="rounded mx-auto d-block" alt="@item.ImageUrl"></td>

                                        <td>
                                            <a href="/AdminChef/DeleteChef/@item.ChefId" class="btn btn-danger btn-icon-split">
                                                <span class="icon text-white-50">
                                                    <i class="fas fa-trash"></i>
                                                </span>
                                                <span class="text">Sil</span>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/AdminChef/UpdateChef/@item.ChefId" class="btn btn-success btn-icon-split">
                                                <span class="icon text-white-50">
                                                    <i class="fas fa-check"></i>
                                                </span>
                                                <span class="text">Güncelle</span>
                                            </a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                        <td><a href="/AdminChef/CreateChef/" class="btn btn-sm btn-primary">Yeni Şef Girişi</a></td>
                    </div>
                }

                <div class="card-footer"></div>
            </div>
        </div>
    </div>

    <!--Row-->


</div>

