@model List<TasteFoodIt.Entities.Notification>

@{
    ViewBag.Title = "NotificationsList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Bildirim Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">Bildirimler</li>
            <li class="breadcrumb-item active" aria-current="page">Bildirim İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Simple Tables</h6>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Bildirim Id</th>
                                <th>Bildirim İçeriği</th>
                                <th>Okunma Durumu</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.NotificationId</td>
                                <td>@item.Description</td>
                                @if (item.IsRead == true)
                                {
                                    <td><a href="/AdminNotification/NotificationIsReadChangeToFalse/@item.NotificationId" class="btn btn-sm btn-dark">Okunmadı Olarak İşaretle</a></td>
                                }
                                else
                                {
                                    <td><a href="/AdminNotification/NotificationIsReadChangeToTrue/@item.NotificationId" class="btn btn-sm btn-warning">Okundu Olarak İşaretle</a></td>
                                }
                                <td><a href="/AdminCategory/DeleteCategory/@item.NotificationId" class="btn btn-sm btn-danger">Sil</a></td>
                                <td><a href="/AdminCategory/UpdateCategory/@item.NotificationId" class="btn btn-sm btn-success">Güncelle</a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    <td><a href="/AdminCategory/CreateCategory/" class="btn btn-sm btn-primary">Yeni Bildirim Girişi</a></td>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
    <!--Row-->


</div>


