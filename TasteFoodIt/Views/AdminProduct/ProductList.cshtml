@model List<TasteFoodIt.Entities.Product>

@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Ürün Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">Ürünler</li>
            <li class="breadcrumb-item active" aria-current="page">Ürün İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Simple Tables</h6>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Ürüm Id</th>
                                <th>Ürün Adı</th>
                                <th>Ürün Açıklaması</th>
                                <th>Ürün Kategorisi</th>
                                <th>Fiyat</th>
                                <th>Durum</th>
                                <th>Ürün Görseli</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.ProductName</td>
                                <td>@item.Description</td>
                                <td>@item.Category.CategoryName</td>
                                <td>@item.Price</td>
                                <td>@item.IsActive</td>
                                <td><img src="@item.ImageUrl" style="height:50px;width:50px;" class="rounded mx-auto d-block" alt="@item.ImageUrl"></td>
                                <td>
                                    <a href="/AdminProduct/DeleteProduct/@item.ProductId" class="btn btn-danger btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-trash"></i>
                                        </span>
                                        <span class="text">Sil</span>
                                </td>
                                <td>
                                    <a href="/AdminProduct/UpdateProduct/@item.ProductId" class="btn btn-success btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-check"></i>
                                        </span>
                                        <span class="text">Güncelle</span>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    <td><a href="/AdminProduct/CreateProduct/" class="btn btn-sm btn-primary">Yeni Ürün Girişi</a></td>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
    <!--Row-->


</div>

