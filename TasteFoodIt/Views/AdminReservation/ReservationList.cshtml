@model List<TasteFoodIt.Entities.Reservation>

@{
    ViewBag.Title = "ReservationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Rezervsyonlar Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">Rezervsyonlar</li>
            <li class="breadcrumb-item active" aria-current="page">Rezervsyon İşlemleri</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Rezervsyonlar</h6>
                </div>
                @if (Model.Count == 0)
                {
                    <div class="card-body">
                        <div class="alert alert-info" role="alert">
                            <h4 class="alert-heading">Rezervsyonlar kısmında bir veri bulunmamaktadır!</h4>
                        </div>
                        <a href="#" class="btn btn-primary">Rezervsyonlar Kısmındaki Verileri Kontrol Et</a>
                    </div>
                }
                else
                {
                    <div class="card mb-4">
                        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h6 class="m-0 font-weight-bold text-primary">Uyarı</h6>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-info alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <h6><i class="fas fa-info"></i><b> Dikkat !</b></h6>
                                Rezervsyon Durumunu Kontrol Et
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th>*</th>
                                    <th>İsim Soyisim</th>
                                    <th>Email</th>
                                    <th>Telefon</th>
                                    <th>Rezervasyon Tarihi</th>
                                    <th>Zaman</th>
                                    <th>Aktif Mi ?</th>
                                    <th>Detaylar</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><a href="#">@item.ReservationId</a></td>
                                        <td>@item.Name</td>
                                        <td>@item.Email</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.ReservationDate</td>
                                        <td>@item.Time</td>
                                        <td>@item.ReservationStatus</td>
                                        <td>
                                            <a href="/AdminContact/OpenMessage/@item.ReservationId" class="btn btn-success btn-icon-split">
                                                <span class="icon text-white-50">
                                                    <i class="fas fa-trash"></i>
                                                </span>
                                                <span class="text">Detayları Gör ve Güncelle</span>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/AdminChef/DeleteContact/@item.ReservationId" class="btn btn-danger btn-icon-split">
                                                <span class="icon text-white-50">
                                                    <i class="fas fa-check"></i>
                                                </span>
                                                <span class="text">İptal Et</span>
                                            </a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                        <td><a href="/AdminReservation/CreateReservation/" class="btn btn-sm btn-primary">Yeni Rezervasyon Girişi</a></td>
                    </div>
                }

                <div class="card-footer"></div>
            </div>
        </div>
    </div>

    <!--Row-->


</div>

