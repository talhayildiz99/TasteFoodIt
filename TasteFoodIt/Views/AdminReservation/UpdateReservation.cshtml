@model TasteFoodIt.Entities.Reservation

@{
    ViewBag.Title = "UpdateReservation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Rezervasyon Detay Sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Rezervasyonlar</li>
            <li class="breadcrumb-item active" aria-current="page">Rezervasyon İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Rezervasyon Deatylar Paneli</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.ReservationId)
                            <label>İsim</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            <br />
                            <label>Email</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                            <br />
                            <label>Telefon</label>
                            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
                            <br />
                            <label>Tarih</label>
                            @Html.TextBoxFor(x => x.ReservationDate, new { @class = "form-control" })
                            <br />
                            <label>Zaman</label>
                            @Html.TextBoxFor(x => x.Time, new { @class = "form-control" })
                            <br />
                            <label>Aktif Mi</label>
                            @Html.TextBoxFor(x => x.ReservationStatus, new { @class = "form-control" })
                            <br />
                        </div>
                        <button type="submit" class="btn btn-outline-success mb-1">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

